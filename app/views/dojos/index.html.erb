<div class="container">
    <div class="mt-5">
        <h3>List all <%= @dojos.length %> Dojos</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="bg-success text-light">
                    <th class="w-25">CodingDojo Branch</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>State</th>
                    <th class="w-25">Actions</th>
                </thead>
                <tbody>
                <% @dojos.each do |dojo|%>
                    <tr>
                        <td><%= dojo.branch %></td>
                        <td><%= dojo.street %></td>
                        <td><%= dojo.city %></td>
                        <td><%= dojo.state %></td>
                        <td>
                            <a href="dojos/<%= dojo.id %>" class="btn btn-sm btn-info">Show</a>
                            <a href="dojos/<%= dojo.id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <form action="dojos/<%= dojo.id %>" method="POST" class="d-inline">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
        <a href="dojos/new" class="btn btn-sm btn-outline-success">New Dojo</a>
    </div>
</div>
